# Server Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit .env to git!

# Database connection
DATABASE_URL="postgresql://user:password@localhost:5432/happytail_loyalty?schema=public"

# Server configuration
PORT=3001
NODE_ENV=development

# JWT configuration
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET="generate-a-strong-secret-here"
JWT_EXPIRES_IN="7d"

# Gingr API configuration (for POS integration)
GINGR_API_KEY="your-gingr-api-key"
GINGR_SUBDOMAIN="your-gingr-subdomain"

# Gingr auto-sync settings
# Set to 'true' to enable automatic syncing during business hours
GINGR_AUTO_SYNC_ENABLED="false"
# Sync interval in minutes (default: 30)
GINGR_AUTO_SYNC_INTERVAL="30"

# CORS - allowed frontend origins
# In production, set these to your actual frontend URLs
CUSTOMER_APP_URL="http://localhost:5173"
ADMIN_APP_URL="http://localhost:5174"

# Email service (for account verification)
# Leave RESEND_API_KEY empty for dev mode (logs to console)
# Get your key at: https://resend.com/api-keys
RESEND_API_KEY=""
EMAIL_FROM="Happy Tail Happy Dog <noreply@happytailhappydog.com>"

# --- v2 Platform Services ---

# Stripe (payments, wallet, subscriptions)
# Get keys at: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Twilio (SMS/MMS/Voice)
# Get credentials at: https://console.twilio.com
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Anthropic (AI orchestrator)
# Get key at: https://console.anthropic.com
ANTHROPIC_API_KEY=""
